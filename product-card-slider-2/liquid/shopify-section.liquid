            }
            .swiper-controls {
                grid-template-columns: 1fr auto;
                row-gap: 16px;
            }
            .swiper-navigation {
                justify-content: flex-start;
            }
        }

        @media (max-width: 640px) {
            .container {
                padding: 24px 16px;
            }
            .hero-section {
                min-height: 400px;
                height: 400px;
            }
            .hero-overlay {
                padding: 24px 20px;
            }
            .hero-title {
                font-size: 26px;
            }
            .deals-title {
                font-size: 24px;
            }
            .product-img-container {
                height: 220px;
            }
            .eye-icon {
                width: 30px;
                height: 30px;
                top: 12px;
                left: 12px;
                font-size: 14px;
            }
            .price-container {
                left: 50px;
                top: 12px;
                padding: 5px 10px;
            }
            .price-container .price {
                font-size: 11px;
            }
            .product-info {
                padding: 16px 18px 20px;
            }
            .swiper {
                min-height: 300px;
            }
            .swiper-navigation {
                justify-content: space-between;
            }
        }
    </style>
    {%- assign collections_list = section.settings.collection_list -%}

    <div class="container {{ section.settings.container_type }}">
        <!-- Hero Section - Fixed on Left -->
        {%- if section.settings.main_collection_banner != blank -%}
            <div class="hero-section">
                <img src="{{ section.settings.main_collection_banner | image_url: width: 1200 }}" 
                     alt="{{ section.settings.main_collection_banner.alt | default: 'Collection Banner' }}" 
                     class="hero-img"
                     loading="lazy"
                     width="{{ section.settings.main_collection_banner.width }}"
                     height="{{ section.settings.main_collection_banner.height }}">
                <div class="hero-overlay">
                    <div class="limited-offers">Limited Offers</div>
                    <h1 class="hero-title">Unlock Exclusive<br>Savings On<br>New Arrivals</h1>
                    {%- if section.settings.collection_list.first != blank -%}
                        <a href="{{ section.settings.collection_list.first.url }}" class="shop-btn">Shop Now ‚Üí</a>
                    {%- else -%}
                        <a href="/collections/all" class="shop-btn">Shop Now ‚Üí</a>
                    {%- endif -%}
                </div>
            </div>
        {%- endif -%}

        <!-- Deals Section - Slider on Right -->
        <div class="deals-section">
            <h2 class="deals-title">{{section.settings.collection_title | escape }}</h2>

            {%- if collections_list != blank and collections_list.size > 0 -%}
                <div class="swiper slides-equal-height" id="collection-swiper-{{ section.id }}">
                    <div class="swiper-wrapper">
                        {%- for collection in collections_list -%}
                            <div class="swiper-slide">
                                <a href="{{ collection.url }}" style="text-decoration: none; color: inherit; display: flex; flex-direction: column; height: 100%;">
                                    <div class="product-img-container">
                                        <div class="eye-icon">üëÅ</div>
                                        {%- assign product_count = collection.all_products_count | default: collection.products_count | default: collection.products.size -%}
                                        {%- if product_count > 0 -%}
                                            <div class="price-container">
                                                <span class="price">
                                                    {{ product_count }} 
                                                    {%- if product_count == 1 -%}
                                                        / nos
                                                    {%- else -%}
                                                        / nos
                                                    {%- endif -%}
                                                </span>
                                            </div>
                                        {%- endif -%}
                                        {%- if collection.image != blank -%}
                                            <img src="{{ collection.image | image_url: width: 600 }}" 
                                                 alt="{{ collection.image.alt | default: collection.title | escape }}" 
                                                 class="product-img"
                                                 loading="lazy"
                                                 width="{{ collection.image.width }}"
                                                 height="{{ collection.image.height }}">
                                        {%- elsif collection.products.first.featured_image != blank -%}
                                            <img src="{{ collection.products.first.featured_image | image_url: width: 600 }}" 
                                                 alt="{{ collection.title | escape }}" 
                                                 class="product-img"
                                                 loading="lazy"
                                                 width="{{ collection.products.first.featured_image.width }}"
                                                 height="{{ collection.products.first.featured_image.height }}">
                                        {%- else -%}
                                            <div style="width: 100%; height: 100%; background: #e5e5e5; display: flex; align-items: center; justify-content: center; color: #999;">
                                                <span>No Image</span>
                                            </div>
                                        {%- endif -%}
                                    </div>
                                    <div class="product-info">
                                        <h3 class="product-name">{{ collection.title }}</h3>
                                    </div>
                                </a>
                            </div>
                        {%- endfor -%}
                    </div>
                </div>
            {%- else -%}
                <div class="swiper slides-equal-height">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide" style="padding: 40px; text-align: center;">
                            <p>No collections found. Please select collections in the theme editor.</p>
                        </div>
                    </div>
                </div>
            {%- endif -%}

            <!-- Navigation arrows & progress bar -->
            {%- if collections_list != blank and collections_list.size > 0 -%}
                <div class="swiper-controls">
                    <div class="swiper-pagination swiper-pagination-progressbar swiper-pagination-horizontal" id="swiper-pagination-{{ section.id }}"></div>

                    <div class="swiper-navigation nav-right">
                        <button class="swiper-nav swiper-nav-prev swiper-button-prev" id="swiper-prev-{{ section.id }}" type="button" aria-label="Previous slide">
                            <svg width="42" height="18" viewBox="0 0 42 18" fill="none">
                                <path d="M0.000782013 9H41.3008V10H2.40078L9.70078 17.3L9.00078 18L0.000782013 9Z" fill="currentColor"></path>
                            </svg>
                        </button>
                        <button class="swiper-nav swiper-nav-next swiper-button-next" id="swiper-next-{{ section.id }}" type="button" aria-label="Next slide">
                            <svg width="42" height="18" viewBox="0 0 42 18" fill="none">
                                <path d="M41.9992 9H0.699219V8H39.5992L32.2992 0.7L32.9992 0L41.9992 9Z" fill="currentColor"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            {%- endif -%}
        </div>
    </div>

    <script defer src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        {%- if collections_list != blank and collections_list.size > 0 -%}
        (function() {
            const sectionId = '{{ section.id }}';
            const swiperSelector = '#collection-swiper-' + sectionId;
            let swiperInstance = null;
            let retryCount = 0;
            const maxRetries = 50; // Maximum 5 seconds of retries
            
            function initSwiper() {
                retryCount++;
                
                // Stop retrying after max attempts
                if (retryCount > maxRetries) {
                    console.error('Swiper initialization failed after maximum retries');
                    return;
                }
                
                // Wait for Swiper library to be ready
                if (typeof Swiper === 'undefined') {
                    setTimeout(initSwiper, 100);
                    return;
                }
                
                const swiperElement = document.querySelector(swiperSelector);
                const paginationEl = document.querySelector('#swiper-pagination-' + sectionId);
                const nextEl = document.querySelector('#swiper-next-' + sectionId);
                const prevEl = document.querySelector('#swiper-prev-' + sectionId);
                
                if (!swiperElement || !paginationEl || !nextEl || !prevEl) {
                    setTimeout(initSwiper, 100);
                    return;
                }
                
                // Destroy existing swiper instance if it exists
                if (swiperInstance) {
                    try {
                        swiperInstance.destroy(true, true);
                    } catch(e) {}
                    swiperInstance = null;
                }
                
                try {
                    swiperInstance = new Swiper(swiperSelector, {
                    // Base config for the smallest widths (< 320px)
                    slidesPerView: 1.5,
                    spaceBetween: 20,
                    loop: false,
                    autoplay: {
                        delay: 5000,
                        disableOnInteraction: true,
                    },
                    grabCursor: true,
                    allowTouchMove: true,
                    watchOverflow: true,
                    watchSlidesProgress: true,
                    observer: true,
                    observeParents: true,
                    observeSlideChildren: true,
                    resizeObserver: true,
                    pagination: {
                        el: '#swiper-pagination-' + sectionId,
                        type: 'progressbar',
                    },
                    navigation: {
                        nextEl: '#swiper-next-' + sectionId,
                        prevEl: '#swiper-prev-' + sectionId,
                    },
                    breakpoints: {
                        // From 320px and up
                        320: {
                            slidesPerView: 1.1,
                            spaceBetween: 20,
                        },
                        // From 375px and up
                        375: {
                            slidesPerView: 1.2,
                            spaceBetween: 20,
                        },
                        // From 425px and up
                        425: {
                            slidesPerView: 1.2,
                            spaceBetween: 20,
                        },
                        // From 640px and up
                        640: {
                            slidesPerView: 1.5,
                            spaceBetween: 20,
                        },
                        768: {
                            slidesPerView: 2.5,
                            spaceBetween: 25,
                        },
                        1024: {
                            slidesPerView: 3,
                            spaceBetween: 30,
                        },
                        1280: {
                            slidesPerView: 4,
                            spaceBetween: 30,
                        }
                    },
                    on: {
                        init: function() {
                            this.update();
                        },
                        resize: function() {
                            this.update();
                        }
                    }
                });
                } catch(error) {
                    console.error('Swiper initialization error:', error);
                }
            }
            
            // Initialize Swiper when DOM is ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function() {
                    setTimeout(initSwiper, 200);
                });
            } else {
                setTimeout(initSwiper, 200);
            }
            
            // Handle window resize with debounce
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    if (swiperInstance) {
                        swiperInstance.update();
                        swiperInstance.updateSlides();
                        swiperInstance.updateSlidesClasses();
                    }
                }, 250);
            });
        })();
        {%- endif -%}
    </script>

